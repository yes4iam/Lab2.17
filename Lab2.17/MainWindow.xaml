<Window x:Class="Lab2._17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2._17"   
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <local:ColorIndex x:Name="colorIndex" HorizontalAlignment="Center" Width="250" Height="100" VerticalAlignment="Top" ColorChanged="colorIndex_ColorChanged_1"/>

            <TextBlock x:Name="txb" Text="RGB" Margin="10" Padding="10" Background="Wheat"/>
        </StackPanel>        
    </Grid>
</Window>
